    <script>
        function promote(el, targetId) {
            const teamName = el.querySelector('input').value;
            const targetInput = document.getElementById(targetId);

            if (!teamName || teamName.includes("ç­‰å¾…")) return;

            // æ’­æ”¾å‹•ç•«
            el.classList.add('advancing');
            
            // å‹•ç•«çµæŸå¾Œå¡«å…¥æ•¸æ“š
            setTimeout(() => {
                targetInput.value = teamName;
                targetInput.parentElement.style.borderColor = '#ffd700';
                el.classList.remove('advancing');
                
                // å¦‚æœæ˜¯å† è»ï¼ŒåŠ ä¸€é»éœ‡å‹•æ„Ÿ
                if(targetId === 'champion') {
                    targetInput.parentElement.style.boxShadow = '0 0 30px #ffd700';
                }
            }, 500);
        }
    </script>
